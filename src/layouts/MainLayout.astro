---
const { title } = Astro.props;
import CardLayout from "./CardLayout.astro";
import Stars from "../components/Stars.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/killua.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="h-screen bg-gruvbox-bg text-gruvbox-fg flex justify-center items-center font-sans"
  >
    <CardLayout>
      <slot />
    </CardLayout>
    <Stars />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Departure";
    src: url("../assets/DepartureMono-Regular.otf");
  }

  h1 {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 900;
  }

  h2 {
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 700;
  }

  blockquote {
    font-style: italic;
  }

  a {
    font-weight: 700;
    color: #83a598;
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  a:hover {
    color: #458588;
  }
</style>
