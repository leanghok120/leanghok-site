---
const { title } = Astro.props;
import CardLayout from "./CardLayout.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="h-screen bg-gruvbox-bg text-gruvbox-fg flex justify-center items-center font-sans"
  >
    <CardLayout>
      <slot />
    </CardLayout>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Departure";
    src: url("../assets/DepartureMono-Regular.otf");
  }

  h1 {
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 900;
  }

  blockquote {
    font-style: italic;
  }

  a {
    font-weight: 700;
    color: #689d6a;
  }
</style>
