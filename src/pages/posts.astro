---
import BaseLayout from "../layouts/BaseLayout.astro"
import BlogPost from "../components/BlogPost.astro"

const allPosts = await Astro.glob("./posts/*.md")
const pageTitle = "Leanghok's Posts"
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Posts</h1>
  <ul>
    {allPosts.map((post) => <li><BlogPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} /></li>)}
  </ul>
  <div class="flex gap-4">
    <a href="./tags/" class="font-bold">See tags</a>
    <a href="./rss.xml" class="font-bold">RSS feed</a>
  </div>
</BaseLayout>
